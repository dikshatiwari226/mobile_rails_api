<p id="notice"><%= notice %></p>

<h1 class="text-center">Applied Jobs</h1>

<table class="table table-striped table-dark table-bordered">
  <thead>
    <tr>
      <th>Position</th>
      <th>Company</th>
      <th>Application no</th>
      <th>Date applied</th>
      <th>Application status</th>
      <th>Resume submit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applied_jobs.each do |applied_job| %>
      <tr>
        <td><%= applied_job.position %></td>
        <td><%= applied_job.company %></td>
        <td><%= applied_job.application_no %></td>
        <td><%= applied_job.date_applied.strftime('%d %b %Y') %></td>
        <td><%= AppliedJob::APP_STATUS[applied_job.application_status] %></td>
        <td><%= applied_job.resume_submit %></td>
        <td><%= link_to 'Show', applied_job , :class => 'btn blue-gradient waves-effect waves-light'%></td>
        <td><%= link_to 'Edit', edit_applied_job_path(applied_job), :class => 'btn peach-gradient waves-effect waves-light' %></td>
        <td><%= link_to 'Destroy', applied_job, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger waves-effect waves-light'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Applied Job', new_applied_job_path , :class => "btn btn--blue btn--stroke btn--stroke--2 px24 py12 txt-s round-full px36" %>
